<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="280dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="20dp"
        android:id="@+id/tvPhoneModel"
        android:text="Phone Model"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etPhoneModel"
        android:singleLine="true"
        app:layout_constraintTop_toBottomOf="@id/tvPhoneModel"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="20dp"
        android:id="@+id/tvNoOfScans"
        android:text="Set No of Scans"
        app:layout_constraintTop_toBottomOf="@id/etPhoneModel"
        />
    <Spinner
        android:id="@+id/spNoOfScans"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/tvNoOfScans"
        android:layout_height="wrap_content"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="20dp"
        android:id="@+id/tvPresetRouterLocation"
        android:text="Set Scan Count"
        app:layout_constraintTop_toBottomOf="@id/spNoOfScans"
        />
    <Spinner
        android:id="@+id/spRouterSpinner"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/tvPresetRouterLocation"
        android:layout_height="wrap_content"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/spRouterSpinner"
        android:id="@+id/tvPresetTestLocation"
        android:text="Set Test Location"
        />
    <Spinner
        android:id="@+id/spTestSpinner"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/tvPresetTestLocation"
        android:layout_height="wrap_content"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spTestSpinner"
        android:textAlignment="center"
        android:text="confirm"
        android:textSize="14dp"
        android:id="@+id/bConfirm"
        />


</android.support.constraint.ConstraintLayout>